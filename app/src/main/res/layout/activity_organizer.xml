<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".OrganizerActivity">

    <ImageView
        android:src="@drawable/logoicon"
        android:layout_width="130dp"
        android:layout_height="130dp"/>
    <TextView
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:text="قائمة منظم الحملة"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_new_campaign"
        android:paddingHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shadow"
        android:text="حملة جديدة"
        android:textColor="@color/font_color"
        android:textStyle="bold"
        android:textSize="@dimen/default_text_size"
        android:shadowColor="#AA4C5656"
        android:shadowDx="2"
        android:shadowDy="8"
        android:shadowRadius="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_manage_campaign"
        android:paddingHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shadow"
        android:text="إدارة الحملة"
        android:textColor="@color/font_color"
        android:textStyle="bold"
        android:textSize="@dimen/default_text_size"
        android:visibility="gone"
        android:shadowColor="#AA4C5656"
        android:shadowDx="2"
        android:shadowDy="8"
        android:shadowRadius="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_track_campaign"
        android:paddingHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/default_text_size"
        android:background="@drawable/button_shadow"
        android:text="تتبع مراحل الحملة"
        android:textColor="@color/font_color"
        android:textStyle="bold"
        android:shadowColor="#AA4C5656"
        android:shadowDx="2"
        android:shadowDy="8"
        android:shadowRadius="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_locate_pilgrims"
        android:paddingHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shadow"
        android:text="تتبع مواقع أفراد الحملة"
        android:textColor="@color/font_color"
        android:textStyle="bold"
        android:shadowColor="#AA4C5656"
        android:textSize="@dimen/default_text_size"
        android:shadowDx="2"
        android:shadowDy="8"
        android:shadowRadius="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_contact_organizer"
        android:paddingHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shadow"
        android:text="الاتصال بالمنظمين"
        android:textColor="@color/font_color"
        android:textStyle="bold"
        android:shadowColor="#AA4C5656"
        android:textSize="@dimen/default_text_size"
        android:shadowDx="2"
        android:shadowDy="8"
        android:shadowRadius="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_signout"
        android:paddingHorizontal="25dp"
        android:layout_marginTop="20dp"

        android:background="@drawable/button_shadow"
        android:text="تسجيل الخروج"
        android:textSize="@dimen/default_text_size"
        android:textColor="@color/font_color"
        android:textStyle="bold"
        android:shadowColor="#AA4C5656"
        android:shadowDx="2"
        android:shadowDy="8"
        android:shadowRadius="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>