<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".UpdateCampaignActivity">
    <ImageView
        android:src="@drawable/logoicon"
        android:layout_width="120dp"
        android:layout_height="120dp"/>
    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:text="تعديل اسم الحملة"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="10dp"
        android:background="@drawable/edittxt_back"
        android:layout_width="match_parent"
        android:paddingHorizontal="15dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:paddingVertical="10dp"
            android:text="اسم الحملة"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="70dp"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/seperator_color"
            android:layout_width="2dp"
            android:layout_marginHorizontal="2dp"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/etxt_campaign_name"
            android:inputType="textPersonName"
            android:paddingRight="5dp"
            android:hint="اكتب اسم الحملة هنا"
            android:background="@color/soil_color"
            android:layout_width="match_parent"
            android:layout_height="30sp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_save"
        android:paddingHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shadow"
        android:text="حفظ"
        android:textColor="@color/font_color"
        android:textStyle="bold"
        android:shadowColor="#AA4C5656"
        android:shadowDx="2"
        android:shadowDy="8"
        android:shadowRadius="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.appcompat.widget.LinearLayoutCompat>