<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:orientation="vertical"
    android:background="@drawable/edittxt_back"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_height="150dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_nid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الرقم المعرف"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الاسم"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_phase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المرحلة"
            android:textSize="17sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <View
        android:layout_above="@id/buttons_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/seperator_color"/>


    <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="2dp"
        android:id="@+id/buttons_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <TextView
            android:gravity="center"
            android:layout_weight="0.3"

            android:drawableTop="@drawable/ic_baseline_call_24"
            android:id="@+id/button_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اتصال"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:gravity="center"
            android:layout_weight="0.3"
            android:drawableTop="@drawable/ic_baseline_my_location_24"
            android:id="@+id/button_locate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الموقع"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:gravity="center"
            android:layout_weight="0.3"
            android:drawableTop="@drawable/ic_baseline_delete_24"
            android:id="@+id/button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="حذف"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>



</RelativeLayout>