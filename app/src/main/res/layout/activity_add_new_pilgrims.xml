<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".AddNewPilgrimsActivity">
    <ImageView
        android:src="@drawable/logoicon"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:text="إضافة أفراد الى الحملة"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="10dp"
        android:background="@drawable/edittxt_back"
        android:layout_width="match_parent"
        android:paddingHorizontal="15dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:paddingVertical="10dp"
            android:text="الرقم المعرف"
            android:textStyle="bold"
            android:layout_width="70dp"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/seperator_color"
            android:layout_width="2dp"
            android:layout_marginHorizontal="2dp"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/search_nid"
            android:inputType="number"
            android:paddingRight="5dp"
            android:hint="ابحث عن طريق الرقم المعرف للشخص"
            android:background="@color/soil_color"
            android:layout_width="match_parent"
            android:layout_height="30sp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_search"
        android:paddingHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shadow"
        android:text="بحث"

        android:textColor="@color/font_color"
        android:textStyle="bold"
        android:shadowColor="#AA4C5656"
        android:shadowDx="2"
        android:shadowDy="8"
        android:shadowRadius="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/search_card"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittxt_back"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:text="الا سم : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text_nid"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:text="الرقم المعرف : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text_phone"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:text="الهاتف :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text_status"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_add"
            android:paddingHorizontal="25dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_shadow"
            android:text="إضافة إلى الحملة"

            android:textColor="@color/font_color"
            android:textStyle="bold"
            android:shadowColor="#AA4C5656"
            android:shadowDx="2"
            android:shadowDy="8"
            android:shadowRadius="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>